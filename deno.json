{
  "tasks": {
    "dev": "deno run --watch --check --allow-all src/server.ts",
    "inspect": "npx @modelcontextprotocol/inspector deno run --allow-all src/server.ts",
    "start": "deno run --allow-all src/server.ts",
    "build": "deno compile --allow-all --no-check --output $HOME/.local/bin/advanced-mcp-server src/server.ts",
    "test": "deno test --allow-all tests/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/server.ts",
    "type-check": "deno check --all src/",
    "clean": "rm -rf bin/ && mkdir -p bin/"
  },
  "imports": {
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.18.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "exclude": ["node_modules", "dist", "bin"]
}
